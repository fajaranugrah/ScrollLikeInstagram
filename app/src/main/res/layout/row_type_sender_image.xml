<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/background_chat"
    android:orientation="vertical">
    <TextView
        android:visibility="gone"
        android:id="@+id/display_date_Sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/transparent_gray"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="5dp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="12sp" />
    <!-- For self message -->
    <LinearLayout
        tools:targetApi="lollipop"
        android:background="@drawable/white_message_bubble"
        android:layout_gravity="end"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewMessageSender"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_loader"
                tools:ignore="ContentDescription" />

            <TextView
                android:padding="5dp"
                android:id="@+id/textViewTimeSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:text="2.00 pm"
                android:textSize="12sp"
                android:textColor="@color/multiple_image_select_imageSelectBackground"
                />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>