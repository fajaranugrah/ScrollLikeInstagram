<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/chat"
        android:text="Chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/chat"
        android:id="@+id/chat_short"
        android:text="Chat Custome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/chat_short"
        android:id="@+id/chat_user"
        android:text="Chat User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/chat_short"
        android:id="@+id/emoji"
        android:text="Emoji Show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/chat_user"
        android:id="@+id/input_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionGo"
        android:singleLine="true"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/username_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_white_right"
                android:text="username"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/job_reference_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/petbacker_accent_color"
                android:background="@drawable/button_white_left"
                android:text="job reference"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/petbacker_accent_color"
                android:text="search"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/petbacker_accent_color"
                android:text="close"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

